  "text": [
    "simplicity",
    "say sleep",
    "or",
    "shall we",
    "shower",
    "have an apple",
    "you are",
    "as I need",
    "water",
    "shall I move?",
    "do you dream?",
    "shallow snow",
    "flesh",
    "melt this"
  ],
  "title": "Valentine",
  "year": ""
